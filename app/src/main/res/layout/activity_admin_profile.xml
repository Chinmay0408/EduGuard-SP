<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEF2FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- ===== TITLE ===== -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Super Admin Profile"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#111827"
            android:gravity="center"/>

        <!-- ===== BASIC INFO CARD ===== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/admin_info_bg">

            <!-- ðŸ”¥ Admin Name -->
            <TextView
                android:id="@+id/tvAdminName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jogindar"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>

            <!-- ðŸ”¥ Admin Email -->
            <TextView
                android:id="@+id/tvAdminEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="superadmin12@gmail.com"
                android:textSize="16sp"
                android:textColor="#E0E7FF"
                android:layout_marginTop="6dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Role: Super Administrator"
                android:textSize="15sp"
                android:textColor="#E0E7FF"
                android:layout_marginTop="6dp"/>
        </LinearLayout>

        <!-- ===== SYSTEM STATISTICS TITLE ===== -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="System Statistics"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1F2937"
            android:layout_marginTop="24dp"/>

        <!-- ===== COLLEGES CARD ===== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/stat_card_blue">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Colleges"
                android:textSize="16sp"
                android:textColor="@android:color/white"/>

            <!-- ðŸ”¥ Colleges Count -->
            <TextView
                android:id="@+id/tvTotalColleges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <!-- ===== TEACHERS CARD ===== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/stat_card_green">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Teachers"
                android:textSize="16sp"
                android:textColor="@android:color/white"/>

            <!-- ðŸ”¥ Teachers Count -->
            <TextView
                android:id="@+id/tvTotalTeachers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <!-- ===== STUDENTS CARD ===== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/stat_card_orange">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Students"
                android:textSize="16sp"
                android:textColor="@android:color/white"/>

            <!-- ðŸ”¥ Students Count -->
            <TextView
                android:id="@+id/tvTotalStudents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>